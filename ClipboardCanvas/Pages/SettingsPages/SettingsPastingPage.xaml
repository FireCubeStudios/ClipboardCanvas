<Page
    x:Class="ClipboardCanvas.Pages.SettingsPages.SettingsPastingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ClipboardCanvas.Pages.SettingsPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid Padding="20,8,20,20">
        <StackPanel Spacing="12">
            <TextBlock
                FontSize="25"
                FontWeight="SemiBold"
                Text="Pasting" />

            <StackPanel>
                <!--  TODO: Add teaching tooltip here  -->
                <TextBlock Text="Always copy large items directly to collection" />
                <!--  TODO: In the future implement it and remove IsEnabled="False"  -->
                <ToggleSwitch IsEnabled="False" IsOn="{x:Bind ViewModel.CopyLargeItemsDirectlyToCollection, Mode=TwoWay}" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
